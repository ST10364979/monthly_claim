@model monthly_claims.Models.register

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center registration-container">
    <!-- Form to register -->
    <form method="post" asp-action="Register_user" class="registration-form">

        <label>Name:</label>
        <input type="text" asp-for="username" required class="styled-input" />
        <br />

        <label>Email:</label>
        <input type="email" asp-for="email" required class="styled-input" />
        <br />

        <label>Select role:</label>
        <select asp-for="role" class="styled-input">
            <option selected disabled>Select role here</option>
            <option value="Lecturer">Lecturer</option>
            <option value="pc">Programme Coordinator</option>
        </select>
        <br />

        <label>Password:</label>
        <input type="password" asp-for="password" required class="styled-input" />
        <br />

        <input type="submit" value="Register Now" class="submit-button" />
    </form>

    <br />
    <a href="/Home/Login">Already have an account? Login now</a>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8ff;
        padding: 20px;
    }

    .registration-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: bold;
        margin-top: 10px;
        display: block;
    }

    .styled-input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 2px solid skyblue;
        border-radius: 4px;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

        .styled-input:focus {
            border-color: deepskyblue;
            outline: none;
        }

    .submit-button {
        background-color: skyblue;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
    }

        .submit-button:hover {
            background-color: deepskyblue;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
