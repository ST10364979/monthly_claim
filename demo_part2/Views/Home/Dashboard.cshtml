@model monthly_claims.Models.claim

@{
    ViewData["Title"] = "Dashboard Page";
}

<a href="/Home/view_claims/">View claims</a>
<a href="/Home/Approve/">Approve claims</a>

<br />

<form method="post" asp-action="claim_sub" enctype="multipart/form-data" class="claim-form">
    <label>Module name</label>
    <input type="text" asp-for="user_email" required class="styled-input" />
    <br />
    
    <label>Hours worked</label>
    <input type="text" asp-for="hours_worked" required class="styled-input" />
    <br />
    
    <label>Hours per rate on module</label>
    <input type="text" asp-for="hour_rate" required class="styled-input" />
    <br />
    
    <label>Description</label>
    <textarea asp-for="description" required class="styled-input"></textarea>
    <br />
    
    <label>Upload file [optional]</label>
    <input type="file" name="File" class="styled-input" />

    <input type="submit" value="Submit Claim" class="submit-button" />
</form>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8ff;
        padding: 20px;
    }

    .claim-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: bold;
        margin-top: 10px;
        display: block;
    }

    .styled-input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 2px solid skyblue;
        border-radius: 4px;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

    .styled-input:focus {
        border-color: deepskyblue;
        outline: none;
    }

    .submit-button {
        background-color: skyblue;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .submit-button:hover {
        background-color: deepskyblue;
    }
</style>

