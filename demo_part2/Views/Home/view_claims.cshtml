@model monthly_claims.Models.get_claims
@{


}

<table>
    <thead>
    <th>User email</th>
    <th>Module</th>
    <th>User id</th>
    <th>Hours worked</th>
    <th>Hour rate</th>
    <th>Note</th>
    <th>Total Amount</th>
    <th>Document</th>
    <th>Status</th>

    </thead>

    <tbody>

        @for (int count = 0; count < Model.email.Count; count++)
        {


            <tr>
                <td>@Model.email[count]</td>
                <td>@Model.module[count]</td>
                <td>@Model.id[count]</td>
                <td>@Model.hours[count]</td>
                <td>@Model.rate[count]</td>
                <td>@Model.note[count]</td>
                <td>@Model.total[count]</td>
                <td> <a href="@Url.Content=~\pdf\@Model.filename[count]">@Model.filename[count]</a></td>
                <td>@Model.status[count]</td>
            </tr>


        }
    </tbody>

</table>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8ff;
        padding: 20px;
    }

    .table-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    a {
        color: skyblue;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

